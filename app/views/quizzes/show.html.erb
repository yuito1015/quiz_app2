<% provide(:title, "クイズ") %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card my-5" style="min-height: 12rem;">
      <div class="card-body">
        <h5 class="card-title">Q<%= params[:id] %></h5>
        <p><%= @post.question %></p>
      </div>
    </div>

    <%= form_with(url: answer_path(params[:id]), local: true) do |f| %>

    <%= f.text_field :answer, class: 'form-control' %>

    <%= f.submit "解答", class: "btn btn-primary btn-block mt-3" %>
    <% end %>

  </div>
</div>