<%= form_with(url: posts_path, scope: :search, method: :get, local: true, class: "pt-2 px-sm-4 pb-sm-4") do |f| %>
<%= f.submit "リセット", type: :reset, class: "btn btn-outline-primary" %>

<div class="form-row my-4">
  <% tags.each do |s, a| %>
  <div class="form-group col-lg-6">
    <%= f.label t ".#{s}" %>
    <%= f.select s, a, {include_blank: "指定しない", selected: @search[s]}, class: "custom-select" %>
  </div>
  <% end %>
</div>

<%= f.submit "検索", class: "btn btn-primary btn-block" %>
<% end %>