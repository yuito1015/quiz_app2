<%= form_with(url: posts_path, scope: :search, method: :get, local: true) do |f| %>
<div class="form-row">
  <% tags.each do |s, a| %>
  <div class="form-group col-lg-6">
    <%= f.label t ".#{s}" %>
    <%= f.select s, a, {include_blank: "指定しない", selected: @search[s]}, class: "custom-select" %>
  </div>
  <% end %>
</div>

<%= f.submit "検索", class: "btn btn-primary btn-block mt-4" %>
<% end %>