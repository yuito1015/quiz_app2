<% provide(:title, "投稿") %>

<div class="row justify-content-center mt-md-3">
  <div class="col-md-10 col-lg-5 mr-lg-5">
    <div class="row mb-3 py-4" style="background-color: #f0f0f0;">
      <%= render "post_show", post: @post %>
    </div>

    <%= render "comments/form" %>
    <hr class="mt-4 hr">
  </div>

  <div class="col-md-10 col-lg-5">
    <ul>
      <%= render @comments, post: @post %>
    </ul>
    <%= paginate @comments %>
  </div>
</div>